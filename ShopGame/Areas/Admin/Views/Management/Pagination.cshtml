@model IEnumerable<ShopGame.Models.SanPham>
@foreach (var item in Model)
{
    int loai = (int)item.MaLoai;
<tr>
    <td>@item.MaSanPham</td>
    <td>@item.TenSanPham</td>
    <td>@(item.GiaBan?.ToString("#,##0")) VND</td>

    @if (loai == 1)
    {
        <td>Steam</td>
    }
    else if (loai == 2)
    {
        <td>Uplay</td>
    }
    else if (loai == 3)
    {
        <td>Origin</td>
    }
    else
    {
        <td>GOG</td>
    }
    @if (item.Anh != null)
    {
        <td><img style="width:50px; height:50px" src="~/img/@item.Anh" /></td>
    }
    else
    {
        <td><img style="width:50px; height:50px" src="~/img/No_image_available.svg.png" /></td>
    }
    <td>
        @Html.ActionLink("Sửa", "AddEdit", new { idProduct = item.MaSanPham }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Xóa", "Delete", new { idPro = item.MaSanPham }, new { @class = "btn btn-danger" })
    </td>
</tr>
}