@model ShopGame.Models.SanPham
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />
<script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>

<section>
    <div class="c" style="margin:auto; height:600px; width:600px; margin-top:60px">
        <div class="top_link"><a href="/Admin/Management/Index"><img src="https://drive.google.com/u/0/uc?id=16U__U5dJdaTfNGobB_OpwAJ73vM50rPV&export=download" alt="">Quay lại</a></div>

        <h2 style="text-align:center">Thông tin sản phẩm</h2>
        @using (Html.BeginForm("AddOrEdit", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.MaSanPham)

            <div class="form-group">
                <label>Tên sản phẩm</label>
                @Html.TextBoxFor(x => x.TenSanPham, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Giá bán </label>
                @Html.TextBoxFor(x => x.GiaBan, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Loại sản phẩm</label>
                @Html.DropDownList("MaLoai", new SelectList(ViewBag.ListCategory, "MaLoai", "TenLoai"), new { @class = "form-control" })

            </div>


            <div class="form-group">
                <label class="lbImgName">Ảnh sản phẩm </label>


                <input type="file" name="Anh" id="Anh" onchange="readURL(this)" class="form-control" /><br />
                @if (Model != null)
                {
                    <img id="imgPreview" style="height:100px; width:100px" src="~/img/@Model.Anh" />
                }
                else
                {
                    <img id="imgPreview" style="height:100px; width:100px" src="~/img/Noimg.png" />
                }

            </div>



            <input type="submit" value="Lưu thông tin " class="btn btn-primary" />

        }
    </div>

</section>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#imgPreview')
                    .attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>